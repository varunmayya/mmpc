<h1>Listing products</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Img url</th>
    <th>Price</th>
    <th>Available</th>
    <th>Requires</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.type %></td>
    <td><%= image_tag(product.img_url) %></td>
    <td><%= product.price %></td>
    <td><%= product.available %></td>
    <td><%= product.requires %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

